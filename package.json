{
  "name": "tx-revert-reason",
  "version": "0.1.1",
  "description": "Get the revert reason from an Ethereum transaction hash",
  "keywords": [
    "tx revert reason",
    "eth revert reason"
  ],
  "license": "MIT",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "tx-revert-reason": "./bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pkgroll",
    "prepare": "husky install",
    "start": "npx esno src/cli"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write",
    "*.{js,ts}": "xo --fix",
    "package.json": "sort-package-json"
  },
  "prettier": {
    "importOrder": [
      "^@core/(.*)$",
      "^@server/(.*)$",
      "^@ui/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "dependencies": {
    "cleye": "^1.2.0",
    "dotenv": "16.0.1",
    "ethers": "5.6.8",
    "loglevel": "1.8.0",
    "web3": "1.7.3"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/node": "16.11.36",
    "esno": "^0.16.3",
    "husky": "8.0.1",
    "lint-staged": "12.4.2",
    "pkgroll": "^1.3.1",
    "prettier": "^2.6.2",
    "sort-package-json": "1.57.0",
    "typescript": "4.7.2",
    "xo": "0.49.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}

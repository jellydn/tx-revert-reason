{
  "name": "tx-revert-reason",
  "version": "0.2.3-0",
  "description": "Get the revert reason from an Ethereum transaction hash",
  "keywords": [
    "tx revert reason",
    "eth revert reason"
  ],
  "license": "MIT",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "tx-revert-reason": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "pkgroll",
    "cli:ethers": "npx esno src/cli",
    "cli:web3": "npx esno src/cli --lib web3",
    "example": "npx tsx example/index.ts",
    "prepare": "husky install",
    "start": "npx tsx src/cli.ts",
    "vercel-build": "npx typedoc src/index.ts"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write",
    "*.{js,ts}": "xo --fix",
    "package.json": "sort-package-json"
  },
  "xo": {
    "rules": {
      "no-mixed-operators": "warn",
      "n/prefer-global/process": "warn",
      "import/extensions": "warn",
      "@typescript-eslint/no-unsafe-assignment": "warn",
      "@typescript-eslint/no-unsafe-call": "warn",
      "@typescript-eslint/restrict-template-expressions": "warn"
    }
  },
  "prettier": {
    "importOrder": [
      "^@core/(.*)$",
      "^@server/(.*)$",
      "^@ui/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "dependencies": {
    "cleye": "1.2.1",
    "dotenv": "16.0.1",
    "ethers": "5.7.0",
    "loglevel": "1.8.0",
    "web3": "2.0.0-alpha.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "3.3.0",
    "@types/node": "16.11.56",
    "esno": "0.16.3",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "pkgroll": "1.4.0",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "sort-package-json": "1.57.0",
    "typedoc": "0.23.11",
    "typescript": "4.7.4",
    "xo": "0.52.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
